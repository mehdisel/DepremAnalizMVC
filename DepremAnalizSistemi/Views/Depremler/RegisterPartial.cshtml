@model DepremAnalizSistemi.Models.Kullanicilar

@using (Ajax.BeginForm("Create","Kullanicilar", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Register", OnSuccess = "onSuccess" , OnFailure = "onFail" }))
