@model DepremAnalizSistemi.Models.ViewModel.UserLoginViewModel

@using (Ajax.BeginForm("ForgetPassword", "Kullanicilar", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "ForgetPassword", OnSuccess = "onSuccessLostPassword", OnFailure = "onFailLostPassword" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            <div class="col-lg-offset-1 col-md-10">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-offset-1 col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", id = "EMailInput" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <input type="text" name="Password" value="bos" hidden/>
    <div class="form-group">
        <div class="col-lg-offset-6 col-md-6">
            <input type="submit" value="Şifreyi Gönder" class="btn btn-default" />

        </div>
    </div>
}
